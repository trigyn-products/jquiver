					<i id="copyIcon" class="fa fa-clipboard" aria-hidden="true" onclick="event.stopPropagation();copyUrlContent('${(urlPrefix)}','formModuleURL');"
					title="<@resourceBundleWithDefault "jws.copyMessageTitle" "Click here to copy path"/>"></i>
